<div class="container">

  <h2>Users</h2>
  <table id='user-table' class="table table-striped table-condensed">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3" width="10%">Action</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show',   user_path(user) %></td>
          <td><%= link_to 'Edit',   user_path(user), method: :edit %></td>
          <td><%= link_to 'Delete', user_path(user), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
